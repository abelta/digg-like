<div class="container">

  <div class="header">
    <h2>Refer an article</h2>
  </div>

  <%= form_for @article do |f| %>

    <div class="row">
      <%= f.label :url, "Article address" %>
    </div>
    
    <div class="row">
      <%= f.url_field :url, class: 'u-full-width' %>
    </div>

    <br />
    <div class="row">
      <%= f.submit "Submit article", class:'button-primary' %>
    </div>

  <% end %>
</div>