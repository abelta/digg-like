<script type="text/x-handlebars" data-template-name="articles">

    <header class="header">
      <h1>Hot on Digg-like</h1>
    </header>

    <div class="container">
    {{#each article in model}}
      
      <article class="row article">
        <div class="three columns">
          <div class="vote_box">
          <span class="vote_count">{{article.voteCount}}</span>
          {{#if article.userVoted}}
            <a class="vote_button"{{action 'unvote' article}}>Unvote!</a>
          {{else}}
            <a class="vote_button"{{action 'vote' article}}>Vote!</a>
          {{/if}}
          </div>
        </div>
        <div class="nine columns">
          {{#link-to 'article' article}}<span class="title">{{article.title}}</span>{{/link-to}}
          <span class="uploader">{{article.userName}}</span>
          <span class="domain">{{domain article.url}}</span>
          <div class="excerpt">{{article.excerpt}}</div>
        </div>
      </article>
      
    {{/each}}
    </div>

  
</script>


<script type="text/x-handlebars" data-template-name="article">
{{#link-to 'articles'}}Back{{/link-to}}
<h2>{{title}}</h2>
<h2>{{domain url}}<small>{{moment createdAt}}</small></h2>
<div>{{excerpt}}</div>
</script>